@using HtmlHelpers.BeginCollectionItemCore;
@model PollApp.ViewModel.NewPollViewModel
<h2>Add a poll</h2>

<form asp-controller="Poll" asp-action="New" method="post">
    <div asp-validation-summary="All"></div>

    <div id="choices">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title"/>
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label >Choice</label>
            <input class="form-control choice" asp-for="Choices[0]" required/>
            <span asp-validation-for="Choices"></span>
        </div>
        <div class="form-group">
            <label >Choice 2</label>
            <input class="form-control choice" asp-for="Choices[1]" required/>
            <span asp-validation-for="Choices"></span>
        </div>
    </div>
    <input type="button" value="Add Choice" id="add" class="btn btn-lg"/>
    <div class="form-group">
        <label asp-for="CateId"></label>
        <select asp-for="CateId" asp-items="Model.CategoriesList"></select>
        <span asp-validation-for="CateId"></span>
    </div>
    <input class="btn btn-lg btn-primary" type="submit" value="Add Poll"/>
</form>